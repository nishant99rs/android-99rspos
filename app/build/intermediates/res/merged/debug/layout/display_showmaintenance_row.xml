<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="100"
    android:orientation="vertical"
    android:background="#2787A4"
    android:id="@+id/Sub"
    >
    <LinearLayout
        android:id="@+id/linearlayout1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f2ede4"
        android:layout_alignParentStart="true"
        android:textAlignment="textStart"
        android:layout_weight="10.0"

        android:layout_below="@id/layout1"
        >

        <TextView android:id="@+id/rowMaintenanceTicket_Id"
            android:layout_height="40dp"
            android:layout_width="145dp"
            android:layout_alignParentLeft="true"
            android:text="1234567890"
            android:textColor="#000000"
            android:fontFamily="sans-serif"
            android:textSize="14px"
            android:gravity="left"
            android:paddingLeft="2dp"
            android:textAppearance="?android:textAppearanceLarge"
            ></TextView>
        <TextView
            android:id="@+id/rowMaintenanceSubject_desc"
            android:paddingTop="5dp"
            android:layout_height="fill_parent"
            android:layout_width="150dp"
            android:layout_toRightOf="@+id/rowMaintenanceTicket_Id"
            android:text="India is my country"
            android:textColor="#000000"
            android:fontFamily="sans-serif"
            android:textSize="14px"
            android:gravity="center"

            android:textAppearance="?android:textAppearanceLarge">

            ></TextView>


        <TextView android:id="@+id/rowMaintenaceDate"
            android:layout_height="40dp"
            android:layout_width="165dp"
            android:layout_toRightOf="@+id/rowmaintenanceSupport_Ticket_Status"
            android:text="DATE"
            android:textColor="#000000"
            android:fontFamily="sans-serif"
            android:textSize="14px"
            android:gravity="center"
            android:textAppearance="?android:textAppearanceLarge"
            ></TextView>

        <TextView android:id="@+id/rowmaintenanceSupport_Ticket_Status"
            android:layout_height="40dp"
            android:layout_width="165dp"
            android:layout_toRightOf="@+id/rowMaintenanceSubject_desc"
            android:text="Networking Issues"
            android:textColor="#000000"
            android:fontFamily="sans-serif"
            android:textSize="14px"
            android:gravity="center"

            android:textAppearance="?android:textAppearanceLarge"
            ></TextView>
        <TextView android:id="@+id/rowMaintenaceTeamMember"
            android:layout_height="40dp"
            android:layout_width="175dp"
            android:layout_toRightOf="@+id/rowmaintenanceSupport_Ticket_Status"
            android:text="Jeeva Ranganathan"
            android:textColor="#000000"
            android:fontFamily="sans-serif"
            android:textSize="14px"

            android:gravity="center"
            android:textAppearance="?android:textAppearanceLarge"
            ></TextView>



    </LinearLayout>
</LinearLayout>