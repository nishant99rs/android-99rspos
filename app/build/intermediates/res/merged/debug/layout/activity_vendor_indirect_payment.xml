        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="0px"
            android:layout_marginTop="10dp"
            android:gravity="left">
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/PaymentNumber"
                android:textColor="#000000"
                android:text=" Payment  Number"
                android:fontFamily="sans-serif"
                android:textSize="20px"
                android:layout_marginTop="10px"
                android:layout_marginLeft="0px"
                android:gravity="center"


                />
            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/VendorPay"
                android:textColor="#000000"
                android:hint="PaymentNumber"
                android:fontFamily="sans-serif"
                android:textSize="18px"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="230px"
                android:gravity="left"
                android:background="@drawable/border_style"
                />
        </LinearLayout>


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="0px"
            android:layout_marginTop="10px"
            android:gravity="left">
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/SelectvendorOrDistributorName"
                android:textColor="#000000"

                android:text=" Select vendor Or Distributor Name"
                android:fontFamily="sans-serif"
                android:textSize="20px"
                android:layout_marginTop="10px"
                android:gravity="center"


                />
            <Spinner
                android:layout_marginEnd="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="90px"
                android:id="@+id/Vendornameforindirectpayment"
                android:background="@drawable/border_style"
                />
        </LinearLayout>


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="15dp"
            android:gravity="left">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Enterthepaymentvalue"
                android:textColor="#000000"
                android:text=" Select Reason of Payment"
                android:fontFamily="sans-serif"
                android:textSize="20px"
                android:layout_marginTop="10px"
                android:layout_marginLeft="0px"
                android:gravity="center"


                />
            <Spinner
                android:layout_marginEnd="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="160px"
                android:id="@+id/selectthereason"
                android:layout_alignParentStart="true"
                android:background="@drawable/border_style"/>

        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="15dp"
            android:gravity="left">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Selectpono"
                android:textColor="#000000"
                android:text=" Amount to Pay"
                android:fontFamily="sans-serif"
                android:textSize="20px"
                android:layout_marginTop="10px"
                android:layout_marginLeft="0px"
                android:gravity="center"


                />
            <EditText

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/VendorPaytotal"
                android:textColor="#000000"
                android:maxLength="8"
                android:inputType="numberDecimal"
                android:hint="EnterTotal Amount"
                android:fontFamily="sans-serif"
                android:textSize="18px"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="260px"
                android:gravity="left"
                android:background="@drawable/border_style"
                />
        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="15dp"
            android:weightSum="1.0"
            android:gravity="left">

            <Button
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="70dp"
                android:layout_height="50px"
                android:layout_weight="0.5"
                android:id="@+id/indirectpaybycash"
                android:textColor="#ffffff"
                android:text=" PAY BY CASH "
                android:fontFamily="sans-serif"
                android:onClick="view"
                android:background="#ff3300"

                />

            <Button

                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_marginRight="70dp"
                android:layout_height="50px"
                android:id="@+id/indirectpaybycheque"
                android:layout_weight="0.5"
                android:textColor="#ffffff"
                android:text=" PAY BY CHEQUE "
                android:fontFamily="sans-serif"
                android:onClick="view"
                android:inputType="numberDecimal"
                android:background="#ff3300"

                />
            <TextView
                android:layout_width="10px"
                android:layout_height="40px"
                android:layout_weight="1.0"
                android:inputType="number"
                android:textColor="#9B9B9B"
                android:hint="INVOICE NO"
                android:visibility="invisible"
                android:fontFamily="sans-serif-thin"
                android:ems="10"
                android:id="@+id/sales_billno"
                android:textSize="15px"
                android:layout_marginEnd="3dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/border_style"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>