<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:clickable="false"
    android:weightSum="100.0"
    android:background="#ff9033"
    android:divider="@android:color/background_light">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:paddingBottom="2dp">

        <TextView
            android:layout_width="190dp"
            android:layout_height="40dp"
            android:text="Vendor Return Id"
            android:textColor="#000000"
            android:id="@+id/id1"
            android:textStyle="bold"
            android:ems="10"
            android:textSize="14dp"
            android:layout_gravity="center_vertical"
            android:gravity="left" />

        <com.mycompany.apps.CustomAuto
            android:id="@+id/reprtRetrnIdTextView"
            android:layout_width="190dp"
            android:layout_height="40dp"
            android:textColor="#000000"
            android:fontFamily="sans-serif"
            android:inputType="textAutoComplete"
            android:textSize="14px"
            android:background="@drawable/border_style"
            android:focusable="true"
            android:hint="Select Vendor Return Id"
            android:textColorHint="@color/hint_color"
            android:layout_gravity="center_vertical" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearlayout1"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:weightSum="225.0"
        android:paddingTop="5dp"
        android:background="#4a4a4a"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:gravity="center_vertical"
        android:paddingBottom="2dp">

        <TextView
            android:text="VENDOR NAME"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:id="@+id/tvDsbtrNm"
            android:textColor="#ffffff"
            android:layout_weight="25.0"
            android:textStyle="bold"
            android:textSize="14dp"
            android:fontFamily="sans_serif"
            android:layout_gravity="center"
            android:gravity="center" />

        <TextView
            android:text="REASON OF RETURN"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:id="@+id/tvNm"
            android:textColor="#ffffff"
            android:layout_weight="25.0"
            android:textStyle="bold"
            android:textSize="14dp"
            android:fontFamily="sans_serif"
            android:layout_gravity="center"
            android:gravity="center" />

        <TextView
            android:text="PRODUCT NAME"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:id="@+id/tvName"
            android:textColor="#ffffff"
            android:layout_weight="25.0"
            android:textStyle="bold"
            android:textSize="14dp"
            android:fontFamily="sans_serif"
            android:layout_gravity="center"
            android:gravity="center" />

        <TextView
            android:text="BATCH NO"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:id="@+id/tvDsbtrNo"
            android:textColor="#ffffff"
            android:layout_weight="25.0"
            android:textStyle="bold"
            android:textSize="14dp"
            android:fontFamily="sans_serif"
            android:layout_gravity="center"
            android:gravity="center" />

        <TextView
            android:text="EXP DATE"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:id="@+id/tvDsbtrDate"
            android:textColor="#ffffff"
            android:layout_weight="25.0"
            android:textStyle="bold"
            android:textSize="14dp"
            android:fontFamily="sans_serif"
            android:layout_gravity="center"
            android:gravity="center" />

        <TextView
            android:text="PRICE"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:id="@+id/tvDsbtrPrice"
            android:textColor="#ffffff"
            android:layout_weight="25.0"
            android:textStyle="bold"
            android:textSize="14dp"
            android:fontFamily="sans_serif"
            android:layout_gravity="center"
            android:gravity="center" />

        <TextView
            android:text="QTY"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:id="@+id/tvDsbtr"
            android:textColor="#ffffff"
            android:layout_weight="25.0"
            android:textStyle="bold"
            android:textSize="14dp"
            android:fontFamily="sans_serif"
            android:layout_gravity="center"
            android:gravity="center" />

        <TextView
            android:text="UOM"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:id="@+id/tvDsbtrUnit"
            android:textColor="#ffffff"
            android:layout_weight="25.0"
            android:textStyle="bold"
            android:textSize="14dp"
            android:fontFamily="sans_serif"
            android:layout_gravity="center"
            android:gravity="center" />

        <TextView
            android:text="TOTAL"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:id="@+id/tvDsbtrTotal"
            android:textColor="#ffffff"
            android:layout_weight="25.0"
            android:textStyle="bold"
            android:textSize="14dp"
            android:fontFamily="sans_serif"
            android:layout_gravity="center"
            android:gravity="center" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/layout3"
        android:textColor="#000000"
        android:layout_below="@+id/linearlayout1">

        <ListView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:textColor="#ffffff"
            android:id="@+id/lv_vendorReturnReport" />
    </LinearLayout>

</LinearLayout>
