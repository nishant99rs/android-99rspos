<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="100"
    android:background="#ff9033">

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:visibility="visible"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"

            >
            <LinearLayout
                android:id="@+id/layout2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1.0"

                >

                <TextView

                    android:layout_width="130px"
                    android:layout_height="36px"
                    android:inputType="number"
                    android:textColor="#000000"
                    android:paddingTop="5dp"
                    android:text="Invoice No"
                    android:fontFamily="sans-serif"
                    android:ems="10"
                    android:id="@+id/tv_invoiceno"
                    android:textSize="20px"
                    android:paddingLeft="5px"
                    android:layout_gravity="center_vertical"
                    />
                <TextView
                    android:layout_width="200px"
                    android:layout_height="40px"
                    android:inputType="number"
                    android:textColor="#000000"
                    android:fontFamily="sans-serif"
                    android:ems="10"
                    android:id="@+id/invoiceno"
                    android:textSize="18px"
                    android:layout_marginEnd="5dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/cust"
                    android:background="@drawable/border_style" />
                <TextView
                    android:layout_width="190px"
                android:paddingTop="5dp"
                    android:layout_height="36px"
                    android:inputType="number"
                    android:textColor="#000000"
                    android:text="Return Reason"
                    android:fontFamily="sans-serif"
                    android:ems="10"
                    android:id="@+id/tv_reason"
                    android:textSize="20px"
                    android:paddingLeft="5px"
                    android:layout_gravity="center_vertical"
                    />
                <Spinner
                    android:layout_width="260dp"
                    android:layout_height="36px"
                    android:textColor="#000000"
                    android:ems="10"
                    android:layout_marginEnd="5dp"
                    android:id="@+id/reasonreturn"
                    android:textSize="14px"
                    android:gravity="center"
                    android:fontFamily="sans-serif"
                    android:layout_gravity="center_vertical"
                    >
                </Spinner>

                <TextView android:layout_width="10px"
                    android:layout_height="10px"
                    android:inputType="number"
                    android:textColor="#9B9B9B"

                    android:hint="INVOICE NO"
                    android:visibility="invisible"
                    android:fontFamily="sans-serif-thin"
                    android:ems="10"
                    android:id="@+id/sales_billno"
                    android:textSize="15px"
                    android:layout_marginEnd="3dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/border_style"/>


            </LinearLayout>
            <LinearLayout
                android:id="@+id/layoutreason"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1.0"
                >
            </LinearLayout>
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"

                >
                <AutoCompleteTextView

                    android:id="@+id/autoProductName"
                    android:layout_width="790px"
                    android:layout_height="40px"
                    android:textColor="#000000"
                    android:fontFamily="sans-serif"
                    android:inputType="text"
                    android:hint="Itemproduct"
                    android:ems="10"
                    android:textSize="15px"
                    android:focusable="true"
                    android:layout_gravity="center_vertical"
                    android:drawableLeft="@drawable/cust"
                    android:background="@drawable/border_style" >
                </AutoCompleteTextView>




                <!--<Button
                    android:layout_width="36px"
                    android:layout_height="36px"
                    android:id="@+id/batchno_button"
                    android:text="Batch No"
                    android:textSize="8px"
                    android:background="@drawable/circle_shape_drawable"
                    android:textColor="#FFFFFF"
                    android:layout_weight="0.2"
                    android:fontFamily="sans-serif"
                    android:onClick="view"
                    />
    -->

            </LinearLayout>



            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#4a4a4a"
                android:paddingLeft="2dp"
                android:paddingTop="5dp"

                >

                <TextView
                    android:layout_width="170px"
                    android:layout_height="25px"
                    android:inputType="number"
                    android:textColor="#ffffff"
                    android:text="PRODUCT NAME"
                    android:id="@+id/product6"
                    android:textSize="14px"
                    android:gravity="left"
                    android:fontFamily="sans-serif"
                    android:layout_gravity="center_vertical"

                    />

              <!--  <TextView
                    android:layout_width="140px"
                    android:layout_height="25px"

                    android:inputType="number"
                    android:textColor="#ffffff"
                    android:text="EXP DATE"
                    android:ems="10"
                    android:id="@+id/product7"
                    android:textSize="14px"
                    android:gravity="center"
                    android:fontFamily="sans-serif"
                    android:layout_gravity="center_vertical"
                    />
-->
                <TextView
                android:layout_width="140dp"
                android:layout_height="25dp"
                    android:inputType="number"
                android:textColor="#ffffff"
                android:text="BATCH.NO"
                android:ems="10"
                android:id="@+id/product8"
                android:textSize="14px"
                android:gravity="center"
                android:fontFamily="sans-serif"
                android:layout_gravity="center_vertical"
                />


                <TextView
                    android:layout_width="120px"
                    android:layout_height="25px"
                    android:inputType="number"
                    android:textColor="#ffffff"
                    android:text="QTY"
                    android:ems="10"
                    android:id="@+id/product9se"
                    android:textSize="14px"
                    android:gravity="center"
                    android:fontFamily="sans-serif"
                    android:layout_gravity="center_vertical"/>

                <!--
                  <TextView
                      android:layout_width="100px"
                      android:layout_height="25px"


                      android:inputType="number"
                      android:textColor="#ffffff"
                      android:text="MRP"
                      android:ems="10"
                      android:id="@+id/product11"
                      android:textSize="12px"
                      android:gravity="center"
                      android:fontFamily="sans-serif"
                      android:layout_gravity="center_vertical"
                      />-->
                <TextView
                    android:layout_width="130px"
                    android:layout_height="25px"

                    android:inputType="number"
                    android:textColor="#ffffff"
                    android:text="SELLING PRICE"
                    android:ems="10"
                    android:id="@+id/product9"
                    android:textSize="14px"
                    android:gravity="center"
                    android:fontFamily="sans-serif"
                    android:layout_gravity="center_vertical"
                    />
                <TextView
                    android:layout_width="110px"
                    android:layout_height="25px"


                    android:inputType="number"
                    android:textColor="#ffffff"
                    android:text="UOM"
                    android:ems="10"
                    android:id="@+id/product10"
                    android:textSize="14px"
                    android:gravity="center"
                    android:fontFamily="sans-serif"
                    android:layout_gravity="center_vertical"
                    />

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="25px"
                    android:inputType="number"
                    android:textColor="#ffffff"
                    android:text="TOTAL"
                    android:ems="10"
                    android:id="@+id/product12"
                    android:textSize="14px"
                    android:gravity="center"
                    android:fontFamily="sans-serif"
                    android:layout_gravity="center_vertical"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/buttons_layout4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="10.0"
                android:orientation="horizontal"
                >

                <ListView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/lv_PurchaseProduct"
                    android:layout_weight="10.0"
                    android:layout_centerHorizontal="true"
                    />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/buttons_layout3"
                android:layout_width="850px"
                android:layout_height="40px"
                android:orientation="horizontal"
                android:focusable="false"
                android:background="#E0E0E0"
                >
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="0.5"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1.0"
                        >
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.7"
                            android:text="Total Items"
                            android:textColor="#000000"
                            android:id="@+id/totalitems"
                            android:textSize="14px"
                            android:fontFamily="sans-serif"
                            android:layout_gravity="center_vertical"
                            android:gravity="left"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1.0"
                        android:focusable="false"
                        >
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:text="0"
                            android:textStyle="bold"
                            android:textColor="#4A4A4A"
                            android:id="@+id/totalitem_textt"
                            android:textSize="14px"
                            android:layout_marginLeft="5dp"
                            android:layout_gravity="center_vertical"
                            android:fontFamily="sans-serif"
                            android:gravity="left"
                            />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="0.5"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"

                        android:weightSum="1.0"
                        >
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:text="Grand Total"
                            android:textColor="#000000"
                            android:id="@+id/grandtotal"
                            android:textSize="14px"
                            android:layout_gravity="center_vertical"
                            android:gravity="right"
                            android:layout_marginLeft="90dp"
                            android:fontFamily="sans-serif"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1.0"
                        android:layout_marginLeft="150dp"
                        >
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:text="0"
                            android:textColor="#000000"
                            android:id="@+id/grandtotal_textt"
                            android:textStyle="normal"
                            android:textSize="14px"
                            android:layout_gravity="center_vertical"
                            android:gravity="center"
                            android:fontFamily="sans-serif"
                            />
                    </LinearLayout>
                </LinearLayout>
                    </LinearLayout>

            <LinearLayout
                android:id="@+id/buttons_layout6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1.0"



                    >

                    <Button
                        android:layout_width="263px"
                        android:layout_height="50px"
                        android:layout_weight="0.5"
                        android:textColor="#000000"
                        android:text="Submit"
                        android:ems="10"
                        android:fontFamily="sans-serif"
                        android:id="@+id/salesreturn_submit"
                        android:textSize="24px"
                        android:gravity="center"
                        android:background="#009985"
                        android:layout_gravity="center_vertical"/>

                    <Button
                    android:layout_width="263px"
                    android:layout_height="50px"
                    android:layout_weight="0.5"
                    android:textColor="#000000"
                    android:text="Clear"
                    android:ems="10"
                    android:fontFamily="sans-serif"
                    android:id="@+id/clear"
                    android:textSize="24px"
                    android:gravity="center"
                    android:background="#009985"
                    android:layout_gravity="center_vertical"/>


                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

      </LinearLayout>
    </LinearLayout>



