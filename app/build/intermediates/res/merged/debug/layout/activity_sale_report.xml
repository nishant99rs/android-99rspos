<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff9033"
    android:clickable="false"
    android:divider="@android:color/background_light"
    android:orientation="vertical"
    android:weightSum="100.0"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="2dp"
        android:paddingTop="5dp">

        <TextView
            android:id="@+id/id"
            android:layout_width="190dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:ems="10"
            android:gravity="left"
            android:text="Transaction Id"
            android:textColor="#000000"
            android:textSize="14dp"
            android:textStyle="bold"
            />

        <com.mycompany.apps.CustomAuto
            android:id="@+id/idTextView"
            android:layout_width="580dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/border_style"
            android:focusable="true"
            android:fontFamily="sans-serif"
            android:hint="Select Transaction id"
            android:textColorHint="@color/hint_color"
            android:inputType="textAutoComplete"
            android:textColor="#000000"
            android:textSize="14px" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/Layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="3dp">

        <TextView
            android:id="@+id/from"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:ems="10"
            android:gravity="left"
            android:text="Select From Date, Month And Year"
            android:textColor="#000000"
            android:textSize="14dp"
            android:textStyle="bold"
            />

        <Spinner
            android:id="@+id/TotalFromDate"
            android:layout_width="190dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="5dp"
            android:background="@drawable/border_style"
            android:ems="10"
            android:focusable="true"
            android:fontFamily="sans-serif"
            android:spinnerMode="dropdown"
            android:textColor="#000000"
            android:textSize="12px"/>

        <Spinner
            android:id="@+id/TotalFromMonth"
            android:layout_width="190dp"
            android:layout_height="44dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="5dp"
            android:background="@drawable/border_style"
            android:ems="10"
            android:focusable="true"
            android:fontFamily="sans-serif"
            android:spinnerMode="dropdown"
            android:textColor="#000000"
            android:textSize="12px"/>

        <Spinner
            android:id="@+id/TotalFromYear"
            android:layout_width="190dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/border_style"
            android:ems="10"
            android:focusable="true"
            android:fontFamily="sans-serif"
            android:spinnerMode="dropdown"
            android:textColor="#000000"
            android:textSize="12px"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/Layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="2dp"
        android:paddingTop="3dp"
        >

        <TextView
            android:id="@+id/to"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:ems="10"
            android:gravity="left"
            android:text="Select To Date, Month And Year"
            android:textColor="#000000"
            android:textSize="14dp"
            android:textStyle="bold"
            />

        <Spinner
            android:id="@+id/TotalToDate"
            android:layout_width="190dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="5dp"
            android:background="@drawable/border_style"
            android:ems="10"
            android:focusable="true"
            android:fontFamily="sans-serif"
            android:spinnerMode="dropdown"
            android:textColor="#000000"
            android:textSize="12px"/>

        <Spinner
            android:id="@+id/TotalToMonth"
            android:layout_width="190dp"
            android:layout_height="44dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="5dp"
            android:background="@drawable/border_style"
            android:ems="10"
            android:focusable="true"
            android:fontFamily="sans-serif"
            android:spinnerMode="dropdown"
            android:textColor="#000000"
            android:textSize="12px"/>


        <Spinner
            android:id="@+id/TotalToYear"
            android:layout_width="190dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/border_style"
            android:ems="10"
            android:focusable="true"
            android:fontFamily="sans-serif"
            android:spinnerMode="dropdown"
            android:textColor="#000000"
            android:textSize="12px"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout4"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_marginLeft="280dp"
        android:orientation="vertical"
        android:paddingBottom="4dp">

        <Button
            android:id="@+id/Submit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#009985"
            android:text="Submit" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearlayout1"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#4a4a4a"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingTop="5dp">

            <TextView
                android:id="@+id/tvTotal"
                android:layout_width="260dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:fontFamily="sans_serif"
                android:gravity="center"
                android:text="TOTAL"
                android:textColor="#ffffff"
                android:textSize="14dp"
                android:textStyle="bold" />

        <TextView
            android:id="@+id/tvUnit"
            android:layout_width="260dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:fontFamily="sans_serif"
            android:gravity="center"
            android:text="UOM"
            android:textColor="#ffffff"
            android:textSize="14dp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/linearlayout1"
        android:orientation="vertical"
        android:textColor="#000000">

        <ListView
            android:id="@+id/lv_SaleReport"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:textColor="#ffffff" />
    </LinearLayout>

</LinearLayout>


