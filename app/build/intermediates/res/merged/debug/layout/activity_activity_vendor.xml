<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff9033"
    >

    <LinearLayout
        android:id="@+id/buttons_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="3.0"
        android:layout_alignParentBottom="true"
       >
        <Button
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:text="UPDATE"
            android:fontFamily="sans-serif"
            android:textSize="20px"
            android:textColor="#FFFFFF"
            android:id="@+id/vendor_update_button"
            android:background="@drawable/button_border"
            android:layout_weight="1.5"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:text="CLEAR"
            android:fontFamily="sans-serif"
            android:textSize="20px"
            android:textColor="#FFFFFF"
            android:id="@+id/vendor_clear_button"
            android:background="@drawable/button_border"
            android:layout_weight="1.5"
            />
       <Button
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:text="EXIT"
           android:fontFamily="sans-serif"
           android:textSize="20px"
        android:textColor="#FFFFFF"
        android:id="@+id/vendor_exit_button"
        android:background="@drawable/button_border"
        android:layout_weight="1.5"
        />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:layout_above="@id/buttons_layout"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="0.5"

            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1.0"
                android:paddingRight="20dp"
                android:paddingTop="5dp"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.35"
                    android:text="Search"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:id="@+id/textView1"
                    android:fontFamily="sans-serif"
                    android:textSize="20px"
                    android:layout_gravity="center_vertical"
                    android:gravity="left"
                    android:paddingLeft="10dp"

                    />

                <com.mycompany.apps.CustomAuto
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.65"
                    android:singleLine="true"
                    android:hint="ENTER DISTRIBUTOR NAME"
                    android:textColor="#000000"
                    android:textSize="14px"
                    android:id="@+id/myautocomplete"
                    android:background="@drawable/border_style">
                </com.mycompany.apps.CustomAuto>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1.0"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:text="Distributor Id"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:id="@+id/textViewid"
                    android:fontFamily="sans-serif"
                    android:textSize="20px"
                    android:layout_gravity="center_vertical"
                    android:gravity="left"
                    android:paddingLeft="10dp"

                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:textColor="#000000"
                    android:ems="10"
                    android:id="@+id/Vendor_Id"
                    android:textSize="20px"
                    android:layout_gravity="center_vertical"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1.0"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:text="Distributor Name"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:id="@+id/textView3"
                    android:fontFamily="sans-serif"
                    android:textSize="20px"
                    android:layout_gravity="center_vertical"
                    android:gravity="left"
                    android:paddingLeft="10dp"

                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:textColor="#000000"
                    android:ems="10"
                    android:id="@+id/Vendor_Name"
                    android:textSize="20px"
                    android:layout_gravity="center_vertical"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1.0"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:text="Contact Name"
                    android:textColor="#000000"
                    android:id="@+id/textView4"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif"
                    android:textSize="20px"
                    android:layout_gravity="center_vertical"
                    android:gravity="left"
                    android:paddingLeft="10dp"

                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:textColor="#000000"
                    android:ems="10"
                    android:id="@+id/Vendor_Contact_Name"
                    android:textSize="20px"
                    android:layout_gravity="center_vertical"

                     />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1.0"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:text=" Address1"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:id="@+id/textView5"
                    android:fontFamily="sans-serif"
                    android:textSize="20px"
                    android:layout_gravity="center_vertical"
                    android:gravity="left"
                    android:paddingLeft="4dp"

                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:textColor="#000000"
                    android:ems="10"
                    android:id="@+id/Vendor_Address"
                    android:textSize="20px"
                    android:layout_gravity="center_vertical"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1.0"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:text="Landline"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:id="@+id/textView6"
                    android:fontFamily="sans-serif"
                    android:textSize="20px"
                    android:layout_gravity="center_vertical"
                    android:gravity="left"
                    android:paddingLeft="10dp"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:ems="10"
                    android:id="@+id/Vendor_Landline"
                    android:textColor="#000000"
                    android:textSize="20px"
                    android:layout_gravity="center_vertical"

                 />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1.0"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:text="Email"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:id="@+id/EmailText"
                    android:fontFamily="sans-serif"
                    android:textSize="20px"
                    android:layout_gravity="center_vertical"
                    android:gravity="left"
                    android:paddingLeft="10dp"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:ems="10"
                    android:id="@+id/EmailProd"
                    android:textColor="#000000"
                    android:textSize="20px"
                    android:layout_gravity="center_vertical"

                    />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="0.5"
            android:paddingLeft="10dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1.0"
                android:paddingRight="20dp"
                android:paddingTop="5dp"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:text="City"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:id="@+id/textView7"
                    android:fontFamily="sans-serif"
                    android:textSize="20px"
                    android:layout_gravity="center_vertical"
                    android:gravity="left"
                    android:paddingLeft="10dp"
                    android:paddingRight="20dp"

                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:ems="10"
                    android:textColor="#000000"
                    android:id="@+id/Vendor_City"
                    android:textSize="20px"
                    android:paddingRight="20dp"
                    android:gravity="left"
                   />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1.0"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:text="Zip"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:id="@+id/textView8"
                    android:fontFamily="sans-serif"
                    android:textSize="20px"
                    android:layout_gravity="center_vertical"
                    android:gravity="left"
                    android:paddingLeft="10dp"
                    android:paddingRight="20dp"

                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:ems="10"
                    android:textColor="#000000"
                    android:id="@+id/Vendor_Zip"
                    android:textSize="20px"
                    android:layout_gravity="center_vertical"
                  />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1.0"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:text="Inventory"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:id="@+id/textView9"
                    android:fontFamily="sans-serif"
                    android:textSize="20px"
                    android:layout_gravity="center_vertical"
                    android:gravity="left"
                    android:paddingLeft="10dp"
                    android:paddingRight="20dp"

                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:textColor="#000000"
                    android:ems="10"
                    android:id="@+id/Vendor_Inventory"
                    android:textSize="20px"
                    android:layout_gravity="center_vertical"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1.0"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:text="MobileNo."
                    android:textColor="#000000"
                    android:id="@+id/textView10"
                    android:fontFamily="sans-serif"
                    android:textStyle="bold"
                    android:textSize="20px"
                    android:layout_gravity="center_vertical"
                    android:gravity="left"
                    android:paddingLeft="10dp"
                    android:paddingRight="20dp"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:ems="10"
                    android:textColor="#000000"
                    android:id="@+id/Vendor_Mobile"
                    android:textSize="20px"
                    android:layout_gravity="center_vertical"
                   />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1.0"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:text="Country"
                    android:textColor="#000000"
                    android:id="@+id/textView12"
                    android:fontFamily="sans-serif"
                    android:textStyle="bold"
                    android:textSize="20px"
                    android:layout_gravity="center_vertical"
                    android:gravity="left"
                    android:paddingLeft="10dp"
                    android:paddingRight="20dp"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:ems="10"
                    android:textColor="#000000"
                    android:id="@+id/Vendor_Country"
                    android:textSize="20px"
                    android:layout_gravity="center_vertical"
                   />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1.0"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:text="Active *"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:id="@+id/textViewactive"
                    android:fontFamily="sans-serif"
                    android:textSize="20px"
                    android:layout_gravity="center_vertical"
                    android:gravity="left"
                    android:paddingLeft="10dp"
                    android:paddingRight="20dp"
                    />
                <Spinner
                    android:id="@+id/Vendor_Active"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:singleLine="true"

                    android:digits="Y,y,N,n"
                    android:layout_weight="0.6"
                    android:background="@drawable/border_style"
                    android:textSize="20px"
                    />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>


