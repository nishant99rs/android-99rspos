    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="0dp"
        android:gravity="left"
        android:paddingTop="5dp"

        android:layout_weight="0.38">
        <Button

            android:layout_width="250px"
            android:layout_height="40px"
            android:id="@+id/po"
            android:textColor="#ffffff"
            android:text="PO NO"
            android:gravity="center"
            android:fontFamily="sans-serif"
            android:onClick="view"
            android:layout_marginLeft="90px"
            android:layout_marginEnd="20px"
            android:background="#ff3300"
            />

        <Button
            android:layout_marginTop="20dp"
            android:layout_width="250px"
            android:layout_marginLeft="90px"
            android:layout_height="40px"
            android:id="@+id/withpo"
            android:textColor="#ffffff"
            android:text=" Without PO NO"
            android:fontFamily="sans-serif"
            android:onClick="view"
            android:background="#ff3300"
            />
        <Button
            android:layout_marginTop="20dp"
            android:layout_width="250px"
            android:layout_marginLeft="90px"
            android:layout_height="40px"
            android:id="@+id/HoldButton"
            android:textColor="#ffffff"
            android:text="Hold"
            android:fontFamily="sans-serif"
            android:onClick="view"

            android:background="#ff3300"
            />


        <Spinner
            android:layout_marginTop="20dp"
            android:layout_width="250px"
            android:layout_height="60px"
            android:layout_marginLeft="90px"
            android:background="#ff3300"
            android:id="@+id/VendororDistributorName"
            android:layout_alignParentStart="true" />

        <Spinner
            android:layout_marginTop="20dp"
            android:layout_width="250px"
            android:layout_height="60px"
            android:layout_marginLeft="90px"
            android:background="#ff3300"
            android:id="@+id/Last3InvoiceNo"
            android:layout_alignParentStart="true" />
        <Spinner
            android:layout_marginTop="20dp"
            android:layout_width="250px"
            android:layout_height="60px"
            android:layout_marginLeft="90px"
            android:background="#ff3300"
            android:id="@+id/HoldPurchaseNoforinventory"
            android:layout_alignParentStart="true" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <Button
                android:layout_marginTop="20dp"
                android:layout_width="110px"
                android:layout_marginLeft="90px"
                android:layout_height="40px"
                android:id="@+id/submitbtn"
                android:textColor="#ffffff"
                android:text="SUBMIT"
                android:fontFamily="sans-serif"
                android:onClick="view"
                android:background="#ff3300"

                />
            <Button
                android:layout_marginTop="20dp"
                android:layout_width="110px"
                android:layout_marginLeft="55px"
                android:layout_height="40px"
                android:id="@+id/submitbtnForHold"
                android:textColor="#ffffff"
                android:text=" SUBMIT "
                android:fontFamily="sans-serif"
                android:onClick="view"
                android:background="#ff3300"

                />



            <Button
                android:layout_marginTop="20dp"
                android:layout_width="110px"
                android:layout_marginLeft="50px"
                android:layout_height="40px"
                android:id="@+id/cancelinventoryalert"
                android:visibility="visible"
                android:textColor="#ffffff"
                android:text="Cancel"
                android:fontFamily="sans-serif"
                android:onClick="view"
                android:background="#ff3300"
                />



