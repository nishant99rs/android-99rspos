<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:clickable="false"
    android:weightSum="100.0"
    android:background="#ff9033"
    android:divider="@android:color/background_light">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="3dp"
        android:paddingBottom="2dp">

        <TextView
            android:layout_width="190dp"
            android:layout_height="40dp"
            android:text="PRODUCT ID"
            android:textColor="#000000"
            android:id="@+id/id"
            android:textStyle="bold"
            android:ems="10"
            android:textSize="14dp"
            android:layout_gravity="center_vertical"
            android:gravity="left" />

        <com.mycompany.apps.CustomAuto
            android:id="@+id/InventryReportTextView"
            android:layout_width="580dp"
            android:layout_height="40dp"
            android:textColor="#000000"
            android:fontFamily="sans-serif"
            android:inputType="textAutoComplete"
            android:textSize="14px"
            android:background="@drawable/border_style"
            android:focusable="true"
            android:hint="Select Product Id"
            android:textColorHint="@color/hint_color"
            android:textCursorDrawable="@drawable/color_cursor"
            android:layout_gravity="center_vertical" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearlayout1"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:weightSum="150.0"
        android:paddingTop="5dp"
        android:background="#4a4a4a"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:gravity="center_vertical">


        <TextView
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:text="PRODUCT NAME"
            android:textColor="#ffffff"
            android:layout_weight="30.0"
            android:id="@+id/tvId"
            android:textStyle="bold"
            android:textSize="14dp"
            android:fontFamily="sans_serif"
            android:layout_gravity="center"
            android:gravity="center" />

        <TextView
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:text="BATCH NO"
            android:layout_weight="30.0"
            android:textColor="#ffffff"
            android:id="@+id/tvDesc"
            android:textStyle="bold"
            android:textSize="14dp"
            android:fontFamily="sans_serif"
            android:layout_gravity="center"
            android:gravity="center" />

        <TextView
            android:layout_width="110dp"
            android:layout_height="30dp"
            android:text="EXPIRY DATE"
            android:layout_weight="30.0"
            android:textColor="#ffffff"
            android:id="@+id/tvStart"
            android:textStyle="bold"
            android:textSize="14dp"
            android:fontFamily="sans_serif"
            android:layout_gravity="center"
            android:gravity="center" />

        <TextView
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:text="QUANTITY"
            android:layout_weight="30.0"
            android:textColor="#ffffff"
            android:id="@+id/tvEnd"
            android:textStyle="bold"
            android:textSize="14dp"
            android:fontFamily="sans_serif"
            android:layout_gravity="center"
            android:gravity="center" />

        <TextView
            android:layout_width="110dp"
            android:layout_height="30dp"
            android:text="DAYS ARE LEFT"
            android:textColor="#ffffff"
            android:layout_weight="30.0"
            android:id="@+id/tvSlb1"
            android:textStyle="bold"
            android:textSize="14dp"
            android:fontFamily="sans_serif"
            android:layout_gravity="center"
            android:gravity="center" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/layout3"
        android:textColor="#000000"
        android:layout_below="@+id/linearlayout1">

        <ListView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:textColor="#ffffff"
            android:id="@+id/lv_InventoryReport" />
    </LinearLayout>

</LinearLayout>
