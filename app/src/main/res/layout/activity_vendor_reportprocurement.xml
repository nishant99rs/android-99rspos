<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:clickable="false"
    android:weightSum="100.0"
    android:background="#ff9033"
    android:divider="@android:color/background_light">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp">

        <TextView
            android:layout_width="190dp"
            android:layout_height="40dp"
            android:text="Vendor Name"
            android:textColor="#000000"
            android:id="@+id/id"
            android:textStyle="bold"
            android:ems="10"
            android:textSize="14dp"
            android:layout_gravity="center_vertical"
            android:gravity="left"
            />

        <com.mycompany.apps.CustomAuto
            android:id="@+id/VendorTextView"
            android:layout_width="580dp"
            android:layout_height="40dp"
            android:textColor="#000000"
            android:fontFamily="sans-serif"
            android:inputType="textAutoComplete"
            android:textSize="14px"
            android:hint="Select Vendor Name"
            android:textColorHint="@color/hint_color"
            android:background="@drawable/border_style"
            android:focusable="true"
            android:layout_gravity="center_vertical" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/Layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="3dp"
        android:paddingBottom="2dp">

        <TextView
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:text="Select From Date, Month And Year"
            android:textColor="#000000"
            android:id="@+id/from"
            android:textStyle="bold"
            android:ems="10"
            android:textSize="14dp"
            android:layout_gravity="center_vertical"
            android:gravity="left"
            />

        <Spinner
            android:id="@+id/NoFromDate"
            android:layout_width="190dp"
            android:layout_height="40dp"
            android:textColor="#000000"
            android:fontFamily="sans-serif"
            android:ems="10"
            android:spinnerMode="dropdown"
            android:textSize="12px"
            android:focusable="true"
            android:layout_marginEnd="5dp"
            android:background="@drawable/border_style"
            android:layout_gravity="center_vertical"/>

        <Spinner
            android:id="@+id/NoFromMonth"
            android:layout_width="190dp"
            android:layout_height="40dp"
            android:textColor="#000000"
            android:fontFamily="sans-serif"
            android:ems="10"
            android:spinnerMode="dropdown"
            android:textSize="12px"
            android:focusable="true"
            android:layout_marginEnd="5dp"
            android:background="@drawable/border_style"
            android:layout_gravity="center_vertical"/>

        <Spinner
            android:id="@+id/NoFromYear"
            android:layout_width="190dp"
            android:layout_height="40dp"
            android:textColor="#000000"
            android:fontFamily="sans-serif"
            android:ems="10"
            android:spinnerMode="dropdown"
            android:textSize="12px"
            android:focusable="true"
            android:layout_marginEnd="5dp"
            android:background="@drawable/border_style"
            android:layout_gravity="center_vertical"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/Layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="3dp"
        android:paddingBottom="2dp">

        <TextView
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:text="Select To Date, Month And Year"
            android:textColor="#000000"
            android:id="@+id/to"
            android:textStyle="bold"
            android:ems="10"
            android:textSize="14dp"
            android:layout_gravity="center_vertical"
            android:gravity="left"
            />

        <Spinner
            android:id="@+id/NoToDate"
            android:layout_width="190dp"
            android:layout_height="40dp"
            android:textColor="#000000"
            android:fontFamily="sans-serif"
            android:ems="10"
            android:spinnerMode="dropdown"
            android:textSize="12px"
            android:focusable="true"
            android:layout_marginEnd="5dp"
            android:background="@drawable/border_style"
            android:layout_gravity="center_vertical"/>

        <Spinner
            android:id="@+id/NoToMonth"
            android:layout_width="190dp"
            android:layout_height="40dp"
            android:textColor="#000000"
            android:fontFamily="sans-serif"
            android:ems="10"
            android:spinnerMode="dropdown"
            android:textSize="12px"
            android:focusable="true"
            android:layout_marginEnd="5dp"
            android:background="@drawable/border_style"
            android:layout_gravity="center_vertical"/>

        <Spinner
            android:id="@+id/NoToYear"
            android:layout_width="190dp"
            android:layout_height="40dp"
            android:textColor="#000000"
            android:fontFamily="sans-serif"
            android:ems="10"
            android:spinnerMode="dropdown"
            android:textSize="12px"
            android:focusable="true"
            android:layout_marginEnd="5dp"
            android:background="@drawable/border_style"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:orientation="vertical"
        android:layout_marginLeft="280dp"
        android:paddingBottom="4dp"
        android:id="@+id/layout4">

        <Button
            android:id="@+id/Submit"
            android:text="Submit"
            android:background="#009985"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>


        <LinearLayout
            android:id="@+id/linearlayout2"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:weightSum="90.0"
            android:paddingTop="5dp"
            android:background="#4a4a4a"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:gravity="center_vertical"
            android:paddingBottom="2dp">

            <TextView
                android:text="PO NO"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:id="@+id/tvPoNo"
                android:textColor="#ffffff"
                android:layout_weight="30.0"
                android:textStyle="bold"
                android:textSize="14dp"
                android:fontFamily="sans_serif"
                android:layout_gravity="center"
                android:gravity="center" />

            <TextView
                android:text="VENDOR NAME"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:id="@+id/tvVendNm"
                android:textColor="#ffffff"
                android:layout_weight="30.0"
                android:textStyle="bold"
                android:textSize="14dp"
                android:fontFamily="sans_serif"
                android:layout_gravity="center"
                android:gravity="center" />

            <TextView
                android:text="TOTAL"
                android:id="@+id/tvTotal"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:textColor="#ffffff"
                android:layout_weight="30.0"
                android:textStyle="bold"
                android:textSize="14dp"
                android:fontFamily="sans_serif"
                android:layout_gravity="center"
                android:gravity="center" />

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/layout3"
        android:textColor="#000000"
        android:layout_below="@+id/linearlayout1">

        <ListView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:textColor="#ffffff"
            android:id="@+id/lv_VendorReport" />
    </LinearLayout>

</LinearLayout>