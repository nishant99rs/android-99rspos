<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="100"
    android:background="#ff9033">


    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:paddingLeft="5dp"
            android:weightSum="5"
            >

            <com.mycompany.apps.CustomAuto
                android:id="@+id/topproductname"
                android:layout_width="320dp"
                android:layout_height="35dp"
                android:hint="Product Name"
                android:textColor="#000000"
                android:fontFamily="sans-serif"
                android:inputType="textAutoComplete"
                android:ems="10"
                android:textSize="14dp"
                android:focusable="true"
                android:layout_gravity="center_vertical"
                android:drawableLeft="@drawable/cust"
                android:background="@drawable/border_style"
                android:layout_weight="2">
            </com.mycompany.apps.CustomAuto>

            <TextView
                android:layout_width="120dp"
                android:layout_height="35dp"
                android:text="Delete Here"
                android:paddingTop="10px"
                android:textSize="14dp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"/>


            <Spinner
                android:layout_width="340dp"
                android:layout_height="35dp"
                android:textColor="#000000"
                android:ems="10"
                android:id="@+id/topprodspinner"
                android:textSize="14dp"
                android:gravity="center"
                android:fontFamily="sans-serif"
                android:layout_gravity="center_vertical"
                android:background="@drawable/border_style"
                android:layout_weight="2">
            </Spinner>


        </LinearLayout>




        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#4a4a4a"
            android:weightSum="4"
            android:paddingLeft="5dp"
            >



            <TextView
                android:layout_width="wrap_content"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:textColor="#ffffff"
                android:text="PRODUCT NAME"
                android:ems="10"
                android:fontFamily="sans-serif"
                android:id="@+id/product1"
                android:gravity="center"
                android:textSize="14dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="2"
                />

            <TextView
                android:layout_width="wrap_content"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:textColor="#ffffff"
                android:text="SHORT NAME"
                android:ems="10"
                android:fontFamily="sans-serif"
                android:id="@+id/productshortname"
                android:textSize="14dp"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:layout_weight="2"
                />




        </LinearLayout>

        <LinearLayout
            android:id="@+id/buttons_layout4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="10.0"
            android:orientation="horizontal"
            >

            <ListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/listView"
                android:layout_weight="10.0"
                android:layout_centerHorizontal="true"
                />

        </LinearLayout>



        <LinearLayout
            android:id="@+id/buttons_layout6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2.0">


            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/submit_button"
                android:textColor="#FFFFFF"
                android:layout_gravity="bottom"
                android:textSize="12dp"
                android:text="Submit"
                android:layout_weight="1.0"
                android:fontFamily="sans-serif"
                android:onClick="view"
                android:background="@drawable/button_border"

                />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:layout_gravity="bottom"
                android:textSize="12dp"
                android:text="Clear"
                android:id="@+id/clear"
                android:fontFamily="sans-serif"
                android:background="@drawable/button_border"
                android:layout_weight="1.0"
                android:onClick="view"
                />
            />
        </LinearLayout>



    </LinearLayout>


</LinearLayout>